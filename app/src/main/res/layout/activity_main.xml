<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ciach.mortgagecalculator.MainActivity"
    tools:layout_column="2"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/purchasePriceEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/purchasePriceTextView"
        app:layout_constraintLeft_toLeftOf="@+id/loanDurationSeekBar"
        app:layout_constraintRight_toRightOf="@+id/loanDurationSeekBar"
        app:layout_constraintTop_toTopOf="@+id/purchasePriceTextView"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/purchasePriceTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Purchase Price"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/interestRateTextView"
        app:layout_constraintRight_toRightOf="@+id/interestRateTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/downPaymentEditText"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchasePriceEditText"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/downPaymentTextView"
        android:layout_width="138dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/down_Payment"
        android:text="Down Payment"
        android:textAlignment="center"
        tools:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/purchasePriceTextView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/downPaymentEditText"
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/interestRateEditText"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downPaymentEditText"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/interestRateTextView"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/interest_rate"
        android:text="Interest Rate"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/downPaymentTextView"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/loanDurationTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/loan_duration"
        android:text="Loan Duration"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/interestRateTextView"
        app:layout_constraintRight_toRightOf="@+id/interestRateTextView"
        app:layout_constraintTop_toBottomOf="@+id/interestRateTextView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <SeekBar
        android:id="@+id/loanDurationSeekBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="11dp"
        android:max="@integer/max_loanDuration"
        android:min="@integer/min_loanDuration"
        android:progress="15"
        android:thumb="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toRightOf="@+id/loanDurationTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_marginRight="16dp"
        tools:layout_marginStart="14dp"
        tools:min="5" />

    <TextView
        android:id="@+id/monthlyPaymentTextView"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/monthly_payment"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="127dp" />

    <TextView
        android:id="@+id/monthlyPaymentLabeltextView"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/monthly_payment"
        android:text="Monthly Payment"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/monthlyPaymentTextView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp" />

</android.support.constraint.ConstraintLayout>
