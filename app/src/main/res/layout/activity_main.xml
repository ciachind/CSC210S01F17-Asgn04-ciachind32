<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ciach.mortgagecalculator.MainActivity"
    tools:layout_column="2"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/purchasePriceEditText"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_homePrice"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchasePriceTextView"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/enter_amount"
        android:text="Purchase Price"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/purchasePriceEditText"
        app:layout_constraintTop_toTopOf="@+id/purchasePriceEditText"
        tools:layout_editor_absoluteY="46dp"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/downPaymentEditText"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/downPaymentTextView"
        app:layout_constraintTop_toTopOf="@+id/downPaymentTextView" />

    <TextView
        android:id="@+id/downPaymentTextView"
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/down_Payment"
        android:text="Down Payment"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/purchasePriceTextView" />

    <EditText
        android:id="@+id/interestRateEditText"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/interestRateTextView"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/interestRateTextView" />

    <TextView
        android:id="@+id/interestRateTextView"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/interest_rate"
        android:text="Interest Rate"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/loanDurationTextView"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="77dp"
        app:layout_constraintTop_toTopOf="@+id/downPaymentTextView" />

    <TextView
        android:id="@+id/loanDurationTextView"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/loan_duration"
        android:text="Loan Duration"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <SeekBar
        android:id="@+id/loanDurationSeekBar"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:max="30"
        android:progress="15"
        android:thumb="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:min="5"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/monthlyPaymentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/monthly_payment"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/monthlyPaymentLabeltextView"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/monthlyPaymentLabeltextView"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/monthly_payment"
        android:text="Monthly Payment"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="189dp"
        app:layout_constraintTop_toBottomOf="@+id/downPaymentTextView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="189dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
